<Window x:Class="client_V3.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:client_V3"
        mc:Ignorable="d"
        Title="Login" Height="319" Width="380"  Background="#84c582">
    <Border Background="#2e3337" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">

            <Label FontSize="15" Content="Login" Foreground="White" HorizontalAlignment="Center"></Label>
            <Separator></Separator>
            <Label Content="Email or Login"  Foreground="White"></Label>
            <TextBox x:Name="loginTextBox" Background="#545d6a" Foreground="White" FontSize="15"/>
            <Label Content="Password" Foreground="White"/>
            <TextBox x:Name="passwordTextBox" Background="#545d6a" Foreground="White" FontSize="15"/>
            <Button x:Name="login" Content="Login" Background="#545d6a" Foreground="White" FontSize="15" Margin="60 10" Click="login_Click"></Button>
        </StackPanel>
    </Border>
</Window>